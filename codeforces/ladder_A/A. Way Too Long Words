#include <iostream>
#include <string>
using namespace std;

int main()
{
    int n;
    cin>>n;
    string words;
    while(n--){
        cin>>words;
        if(words.length() > 10){
            cout<<words[0] << to_string(words.length() - 2)<<words[words.length() -1];
        }
        else{
            cout<<words;
        }
    }

    return 0;
}
