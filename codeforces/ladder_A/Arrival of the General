#include <iostream>

using namespace std;

int main()
{
    int n, a;
    cin>>n;
    int maxa=0, mina=110, maxi, mini;
    for(int i=1; i<=n; i++){
        cin>>a;
        if(a > maxa){
            maxi = i;
            maxa = a;
        }
        if(a <= mina){
            mini = i;
            mina = a;
        }
    }

if(maxi > mini){
    cout<<(maxi - 1) + (n - mini) -1 <<endl;
}
else{
    cout<<(maxi - 1) + (n - mini);
}
    return 0;
}
