#include <iostream>

using namespace std;

int main()
{
   int friends, k;
   cin>>friends>>k;
   
   int total_Red = 2 * friends;
   int total_green = 5 * friends;
   int total_blue = 8 * friends;
   
   int sum = 0;
   if((total_Red % k) == 0){
       sum += (total_Red / k);
   }
   else{
       sum += (total_Red / k) +1;
   }
   
   if((total_green % k) == 0){
       sum += (total_green / k);
   }
   else {
       sum += (total_green / k)+1;
   }
   
   if((total_blue % k) == 0){
       sum += (total_blue /k);
   }
   else{
       sum += (total_blue / k)+1;
   }

cout<<sum<<endl;
    return 0;
}
